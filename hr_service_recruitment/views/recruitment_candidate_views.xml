<openerp>
<data>

<record id="hr_service_recruitment_candidate_view_form" model="ir.ui.view">
    <field name="name">hr_service.recruitment_candidate form</field>
    <field name="model">hr_service.recruitment_candidate</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='parent_id']" position="attributes">
                <attribute name="on_change"></attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='is_company']" position="attributes">
                <attribute name="on_change"></attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='use_parent_address']" position="attributes">
                <attribute name="on_change"></attribute>
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="work_expectation" string="Work Expectation">
                    <group name="work_expectation_1" colspan="4" col="2">
                        <group name="work_expectation_1_1" colspan="1" col="2">
                            <field name="expected_salary_currency_id"/>
                            <field name="expected_salary" widget="monetary" options="{'currency_field':'expected_salary_currency_id'}"/>
                        </group>
                        <group name="work_expectation_1_2" colspan="1" col="2">
                            <field name="expected_field_of_work_id"/>
                            <field name="expected_job_level_id"/>
                            <field name="expected_job_id"/>
                        </group>
                        <group name="work_expectation_1_2" colspan="1" col="2">
                            <field name="month_until_available"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="hr_service_recruitment_candidate_view_tree" model="ir.ui.view">
    <field name="name">hr_service.recruitment_candidate tree</field>
    <field name="model">hr_service.recruitment_candidate</field>
    <field name="inherit_id" ref="base.view_partner_tree"/>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Candidate</attribute>
            </xpath>
        </data>
    </field>
</record>

<record id="hr_service_recruitment_candidate_view_search" model="ir.ui.view">
    <field name="name">hr_service.recruitment_candidate search</field>
    <field name="model">hr_service.recruitment_candidate</field>
    <field name="inherit_id" ref="base.view_res_partner_filter"/>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//search" position="attributes">
                <attribute name="string">Candidate</attribute>
            </xpath>
        </data>
    </field>
</record>

<record id="hr_service_recruitment_candidate_view_kanban" model="ir.ui.view">
    <field name="name">hr_service.recruitment_candidate kanban</field>
    <field name="model">hr_service.recruitment_candidate</field>
    <field name="inherit_id" ref="base.res_partner_kanban_view"/>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//kanban" position="attributes">
                <attribute name="string">Candidate</attribute>
            </xpath>
        </data>
    </field>
</record>

<record id="hr_service_recruitment_candidate_action" model="ir.actions.act_window">
    <field name="name">Candidates</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hr_service.recruitment_candidate</field>
    <field name="view_type">form</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="context">
        {
            "default_is_company":0,
            "default_customer":0,
            "default_supplier":0,
            "default_is_talent":1,
        }
    </field>
    <field name="search_view_id" ref="hr_service_recruitment_candidate_view_search"/>
</record>

<record id="hr_service_recruitment_candidate_window_kanban" model="ir.actions.act_window.view">
    <field eval="1" name="sequence"/>
    <field name="view_mode">kanban</field>
    <field name="view_id" ref="hr_service_recruitment_candidate_view_kanban"/>
    <field name="act_window_id" ref="hr_service_recruitment_candidate_action"/>
</record>

<record id="hr_service_recruitment_candidate_window_tree" model="ir.actions.act_window.view">
    <field eval="2" name="sequence"/>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="hr_service_recruitment_candidate_view_tree"/>
    <field name="act_window_id" ref="hr_service_recruitment_candidate_action"/>
</record>

<record id="hr_service_recruitment_candidate_window_form" model="ir.actions.act_window.view">
    <field eval="3" name="sequence"/>
    <field name="view_mode">form</field>
    <field name="view_id" ref="hr_service_recruitment_candidate_view_form"/>
    <field name="act_window_id" ref="hr_service_recruitment_candidate_action"/>
</record>

<menuitem 
    id="hr_service_recruitment_candidate_menu"
    name="Candidates"
    parent="hr_service_recruitment_main_menu"
    action="hr_service_recruitment_candidate_action"
    sequence="3"/>


</data>
</openerp>

<openerp>
<data>

<record id="res_partner_view_form" model="ir.ui.view">
    <field name="name">res.partner form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//page[@name='sales_purchases']/group/group/field[@name='supplier']" position="after">
                <field name="is_talent" attrs="{'invisible':[('is_company','=',True)]}"/>
            </xpath>
        </data>
    </field>
</record>

<record id="res_partner_talent_action" model="ir.actions.act_window">
    <field name="name">Talents</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">res.partner</field>
    <field name="view_type">form</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="context">
        {
            "default_is_company":0,
            "default_customer":0,
            "default_supplier":0,
            "default_is_talent":1,
        }
    </field>
    <field name="domain">
        [
            ('is_company', '=', False),
            ('parent_id', '=', False),
            ('is_talent', '=', True),
        ]
    </field>
    <field name="search_view_id" ref="partner_app.res_partner_view_search"/>
</record>

<record id="res_partner_talent_window_kanban" model="ir.actions.act_window.view">
    <field eval="1" name="sequence"/>
    <field name="view_mode">kanban</field>
    <field name="view_id" ref="partner_app.res_partner_individual_view_kanban"/>
    <field name="act_window_id" ref="res_partner_talent_action"/>
</record>

<record id="res_partner_talent_window_tree" model="ir.actions.act_window.view">
    <field eval="2" name="sequence"/>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="partner_app.res_partner_individual_view_tree"/>
    <field name="act_window_id" ref="res_partner_talent_action"/>
</record>

<record id="res_partner_talent_window_form" model="ir.actions.act_window.view">
    <field eval="3" name="sequence"/>
    <field name="view_mode">form</field>
    <field name="view_id" ref="partner_app.res_partner_individual_view_form"/>
    <field name="act_window_id" ref="res_partner_talent_action"/>
</record>

<menuitem 
    id="hr_service_recruitment_talent_menu"
    name="Talents"
    parent="hr_service_recruitment_main_menu"
    action="res_partner_talent_action"
    sequence="3"/>


</data>
</openerp>
